@model List<HizmetTipi>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@if (ViewBag.Kullanici!=null)
{
    <p>@ViewBag.Kullanici</p>
}

@* Fotografçı arama butonları *@
<section id="section-ara"><br />
    <div class="site-blocks-cover overlay" style="background-image: url(images/hero_2.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row align-items-center justify-content-center text-center">
                <div class="col-md-12 mt-5 mb-5">
                    <div class="form-search-wrap" data-aos="fade-up" data-aos-delay="200">
                        @using (Html.BeginForm("Bul", "Home", FormMethod.Post))
                        {
                            <div class="row align-items-center">
                                <div class="col-lg-12 mb-4 mb-xl-0 col-xl-4">
                                    <div class="select-wrap">
                                        <span class="icon"><span class="icon-keyboard_arrow_down"></span></span>
                                        <select class="form-control rounded" name="hizmetTipi" id="">
                                            @foreach (var item in Model)
                                            {
                                                <option value="@item.Adi">@item.Adi</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-12 mb-4 mb-xl-0 col-xl-3">
                                    <div class="wrap-icon">
                                        <span class="icon icon-room"></span>
                                        <select class="form-control rounded" name="fotoSehir" id="">
                                            <option value="Istanbul">İstanbul</option>
                                            <option value="Ankara">Ankara</option>
                                            <option value="Bursa">Bursa</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-12 mb-4 mb-xl-0 col-xl-3">
                                    <span class="icon icon-room"></span>
                                    <input name="tarih" type="date" class="form-control rounded" placeholder="Location">
                                </div>

                                <div class="col-lg-12 col-xl-2 ml-auto text-right">
                                    <input type="submit" class="btn btn-warning btn-block rounded text-light" value="Bul">
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>

