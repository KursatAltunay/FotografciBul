@model Fotografci

@{
    ViewBag.Title = "FotografciGiris";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>FOTOĞRAFÇI GİRİŞ</p>
@if (ViewBag.Mesaj != null)
{
    <p>@ViewBag.Mesaj</p>
}
@using (Html.BeginForm("FotografciGiris", "Photographer", FormMethod.Post, new { @class = "p-5 bg-white" }))
{
    <div class="row form-group">
        <div class="col-md-6">
            <label class="text-black" for="email">Email</label>
            @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
        </div>
        <div class="col-md-6">
            <label class="text-black" for="subject">Şifre</label>
            @Html.TextBoxFor(a => a.Sifre, new { @class = "form-control", @type = "password" })
        </div>
    </div>


    <div class="row form-group">
        <div class="col-md-12">
            <input type="submit" value="Giriş Yap" class="btn btn-warning py-2 px-4 text-white">
        </div>
    </div>
}

<div class="row form-group">
    <div class="col-12">
        <p>Kayıtlı değil misiniz? <a href="@Url.Action("FotografciKaydet", "Photographer")" class="text-warning">Şimdi Kayıt Olun..</a></p>
    </div>
</div>
