@model Fotografci
@{
    ViewBag.Title = "UserRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Fotoğrafçı Kayıt</h2>
@*@{
    List<SelectListItem> sehirler = new List<SelectListItem>();
    sehirler.Add("Istanbul");
    sehirler.Add("Ankara");
