@model Fotografci

<div class="py-5" id="section-about">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-12 col-lg-7 ml-auto order-lg-2 position-relative mb-5" data-aos="fade-up">
                <img src="~/Assets/images/@Model.Fotograf" alt="Image" class="img-fluid rounded">
            </div>
            <div class="col-md-12 col-lg-4 order-lg-1" data-aos="fade-up">
                <h2 class="heading mb-4">Hoşgeldiniz, @Model.Adi</h2>
                <p class="mb-5"><h4>Açıklama Metniniz:</h4> @Model.Aciklama</p>
                <p> @Html.ActionLink("BilgileriDuzenle", "BilgileriDuzenle", new {id=Model.ID }, new {@class= "btn btn-warning text-white py-2 mr-3 text-uppercase letter-spacing-1"}) </p>
            </div>
        </div>
    </div>
</div>
